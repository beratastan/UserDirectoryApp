@model IEnumerable<UserDto>
@{
    ViewData["Title"] = "Index";
}

<h1>Kullanıcılar</h1>
<a asp-action="Create" class="btn btn-success mb-3">Yeni Üye Ekle</a>
<a asp-action="Sort" class="btn btn-success mb-3">Üyeleri Sırala</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">İsim</th>
            <th scope="col">Soyisim</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>
                    <a asp-action="Update" class="btn btn-warning" asp-route-id="@item.Id">Güncelle</a>
                    <a asp-action="Remove" class="btn btn-danger" asp-route-id="@item.Id">Sil</a>
                </td>
            </tr>

        }
    </tbody>
</table>
